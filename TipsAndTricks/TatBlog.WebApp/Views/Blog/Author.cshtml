<!-- tạo view đê trình bày kết quả trả về từ các Action-->
@using TatBlog.Core.Contracts;
@model IPagedList<Post>
@{
	ViewData["PagTitle"] = "Tac gia";
	var postQuery = (ViewBag.PostQuery as PostQuery) ?? new PostQuery();
}
<div class=p-4>
	@if (!string.IsNullOrWhiteSpace(postQuery.AuthorSlug))
	{
		<h3 class= "text-primary mb-3">
			Những bài viết chứa tác giả '@postQuery.AuthorSlug'
		</h3>
	}
	@foreach (var postItem in Model)
	{
		<partial name = "_PostList" model="postItem"/>
	}
	<partial name = "_Pager" model="@Model"/>

</div>